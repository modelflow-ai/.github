{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^2.18",
        "modelflow-ai/core": "^0.1",
        "modelflow-ai/mistral-adapter": "^0.1",
        "modelflow-ai/ollama-adapter": "^0.1",
        "modelflow-ai/openai-adapter": "^0.1",
        "modelflow-ai/symfony-bundle": "^0.1",
        "ramsey/uuid": "^4.7",
        "symfony/console": "7.0.*",
        "symfony/dotenv": "7.0.*",
        "symfony/flex": "^2",
        "symfony/form": "7.0.*",
        "symfony/framework-bundle": "7.0.*",
        "symfony/mercure-bundle": "^0.3.8",
        "symfony/messenger": "7.0.*",
        "symfony/mime": "7.0.*",
        "symfony/runtime": "7.0.*",
        "symfony/stimulus-bundle": "^2.14",
        "symfony/string": "7.0.*",
        "symfony/twig-bundle": "7.0.*",
        "symfony/uid": "7.0.*",
        "symfony/ux-turbo": "^2.14",
        "symfony/webpack-encore-bundle": "^2.1",
        "symfony/yaml": "7.0.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.15",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "^0.18.1",
        "symfony/debug-bundle": "7.0.*",
        "symfony/maker-bundle": "^1.54",
        "symfony/monolog-bundle": "^3.0",
        "symfony/stopwatch": "7.0.*",
        "symfony/var-dumper": "7.0.*",
        "symfony/web-profiler-bundle": "7.0.*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./../../packages/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./../../integrations/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit"
        ],
        "phpstan": "@php vendor/bin/phpstan analyze",
        "lint-rector": "@php vendor/bin/rector process --dry-run",
        "lint-php-cs": "@php vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "lint": [
            "@phpstan",
            "@lint-php-cs",
            "@lint-rector",
            "@lint-composer"
        ],
        "lint-composer": "@composer validate --strict --no-check-publish",
        "rector": "@php vendor/bin/rector process",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix",
        "fix": [
            "@rector",
            "@php-cs-fix"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        }
    }
}
